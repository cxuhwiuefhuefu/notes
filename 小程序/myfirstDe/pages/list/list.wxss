/* 路径要写相对路径 */
@import "../common-list.wxss";



.recommend-container{
    padding: 0 25rpx;   
}
.recommend-article{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.date{
    position: relative;
    font-size: 52rpx;
    letter-spacing: 10rpx;
    padding-bottom: 24rpx;
    margin-top: 20rpx;
}
.date::after{
    content: ''; /* 如果没有content 它的宽高是不起作用的 */
    display: block;
    position: absolute;
    left: 62rpx;
    bottom: 0;
    width: 114rpx; 
    height: 4rpx;
    background-color: #999;   
}
.recommend-title{
    margin-top: 20rpx;
    font-size: 28rpx;  
    text-align: center;
    line-height: 56rpx; 
}
.recommend-cover{
    width: 700rpx;
    margin-top: 30rpx;
}
/* 图片和边有一定的间距 */

.recommend-box{

}
.recommend-box text{
    display: inline-block;
    border: 1px solid #000;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    margin: 20rpx 20rpx 20rpx 0rpx; /* 上 右 下 左 */
}
.recommend-box text:nth-of-type(1) {
    background-color: #000;
    color: #fff;
    font-weight: bold;
}





