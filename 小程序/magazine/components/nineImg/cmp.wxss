.container{
    width: 700rpx;
}
/* flex布局 */
.img-container{
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 700rpx;
    height: 700rpx;
    /* overflow: hidden; */ /* 即使设置成也会多出这一块 如果图片大于9 那我们就让第十张图片不显示出来了 */
}
.image{
    width: 31%;
    height: 31%;
}

.img-num{
    position: absolute;
    right: 80rpx;
    bottom: 80rpx;
    padding: 5rpx 10rpx;
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    font-size: 24rpx;
}

.text-container{
    padding: 0 30rpx;
    font-size: 40rpx;
    font-weight: 400;
    letter-spacing: 2rpx; 
}


